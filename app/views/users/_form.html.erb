<div class='container'>
<%= form_with model: @user do |form| %>
  <%= form.label :username, "Username:" %>
  <br />
  <%= form.text_field :username, placeholder: "Enter Name"%>
  <br /><br />
  <%= form.label :email, "Email:" %>
  <br />
  <%= form.text_field :email, placeholder: "Enter Email"%>
  <br /><br />
  <%= form.label :password, "Password:" %>
  <br />
  <%= form.password_field :password, placeholder: "Enter Password"%>
  <br /><br />
  <%= form.submit "Submit", class: "submit" %>
<% end %>
</div>
